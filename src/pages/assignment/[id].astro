---
import Layout from '../../layouts/Layout.astro';
import Sidebar from '../../components/Sidebar.astro';
import ChatInterface from '../../components/ChatInterface.astro';

// URLパラメータから課題IDを取得
const { id } = Astro.params;

// 課題データの定義
const assignmentsData = [
  {
    id: "math-1",
    title: "二次方程式の解法",
    description: "二次方程式の因数分解と解の公式を使った解き方を学びましょう。",
    dueDate: "2025年6月15日",
    status: "active",
    subject: "math",
    subjectName: "数学",
    color: "blue"
  },
  {
    id: "math-2",
    title: "三角関数の基礎",
    description: "sin, cos, tanの基本的な性質と応用について学びます。",
    dueDate: "2025年6月20日",
    status: "active",
    subject: "math",
    subjectName: "数学",
    color: "blue"
  },
  {
    id: "math-3",
    title: "確率の基本",
    description: "確率の基本的な概念と計算方法を学びます。",
    dueDate: "2025年6月30日",
    status: "pending",
    subject: "math",
    subjectName: "数学",
    color: "blue"
  },
  {
    id: "science-1",
    title: "化学反応の基本",
    description: "化学反応式のバランスと反応速度について学びます。",
    dueDate: "2025年6月18日",
    status: "active",
    subject: "science",
    subjectName: "理科",
    color: "green"
  },
  {
    id: "science-2",
    title: "力学の法則",
    description: "ニュートンの運動法則と力学的エネルギー保存則について学びます。",
    dueDate: "2025年7月5日",
    status: "pending",
    subject: "science",
    subjectName: "理科",
    color: "green"
  },
  {
    id: "english-1",
    title: "英語エッセイ作成",
    description: "指定されたテーマに沿って英語でエッセイを書く練習をします。",
    dueDate: "2025年6月25日",
    status: "pending",
    subject: "english",
    subjectName: "英語",
    color: "yellow"
  },
  {
    id: "social-1",
    title: "日本の歴史年表",
    description: "明治時代から現代までの重要な出来事をまとめます。",
    dueDate: "2025年6月25日",
    status: "active",
    subject: "social",
    subjectName: "社会",
    color: "red"
  },
  {
    id: "social-2",
    title: "現代社会の課題",
    description: "少子高齢化など現代社会が抱える問題について調べます。",
    dueDate: "2025年7月10日",
    status: "pending",
    subject: "social",
    subjectName: "社会",
    color: "red"
  }
];

// IDに一致する課題を検索
const assignment = assignmentsData.find(item => item.id === id);

// 課題が見つからない場合はホームページにリダイレクト
if (!assignment) {
  return Astro.redirect('/');
}

// チャットの初期メッセージ
const initialMessages = [
  {
    sender: 'system',
    content: `「${assignment.title}」の課題について質問してみましょう。デジタルお兄ちゃんが考え方のヒントを出します。`
  },
  {
    sender: 'brother',
    content: `こんにちは！${assignment.title}の課題に取り組んでるんだね。どんなところで困ってる？`
  }
];
---

<Layout>
  <Sidebar />
  <main class="main">
    <div class="assignment-header" style={`--class-color: var(--color-${assignment.color})`}>
      <div class="container">
        <div class="assignment-header__back">
          <a href={`/class/${assignment.subject}`} class="back-button">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="19" y1="12" x2="5" y2="12"></line>
              <polyline points="12 19 5 12 12 5"></polyline>
            </svg>
            <span>{assignment.subjectName}に戻る</span>
          </a>
        </div>
        <div class="assignment-header__content">
          <h1 class="assignment-header__title">{assignment.title}</h1>
          <p class="assignment-header__meta">期限: {assignment.dueDate} | ステータス: {assignment.status === 'active' ? '進行中' : '予定'}</p>
          <p class="assignment-header__description">{assignment.description}</p>
        </div>
      </div>
    </div>

    <div class="chat-layout container">
      <ChatInterface initialMessages={initialMessages} subject={assignment.subject} topic={assignment.id} />
      
      <aside class="sidebar-tools">
        <div class="tools-header">
          <h3 class="tools-title">学習ツール</h3>
        </div>
        <div class="tools-list">
          <button class="tool-button">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
              <polyline points="14 2 14 8 20 8"></polyline>
              <line x1="16" y1="13" x2="8" y2="13"></line>
              <line x1="16" y1="17" x2="8" y2="17"></line>
              <polyline points="10 9 9 9 8 9"></polyline>
            </svg>
            <span>サマリーを作成</span>
          </button>
          <button class="tool-button">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
              <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
            </svg>
            <span>ノートを取る</span>
          </button>
          <button class="tool-button">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
              <line x1="12" y1="17" x2="12.01" y2="17"></line>
            </svg>
            <span>ヒントを見る</span>
          </button>
        </div>
      </aside>
    </div>
  </main>
</Layout>

<style>
  .main {
    flex: 1;
    height: 100vh;
    overflow-y: auto;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }
  
  .assignment-header {
    background-color: var(--class-color);
    color: white;
    padding: 2rem 0;
    margin-bottom: 2rem;
  }
  
  .assignment-header__back {
    margin-bottom: 1.5rem;
  }
  
  .back-button {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.2s ease;
  }
  
  .back-button:hover {
    color: white;
  }
  
  .assignment-header__title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
  }
  
  .assignment-header__meta {
    font-size: 0.875rem;
    margin-bottom: 1rem;
    opacity: 0.9;
  }
  
  .assignment-header__description {
    font-size: 1rem;
    max-width: 800px;
    line-height: 1.6;
  }
  
  .chat-layout {
    display: grid;
    grid-template-columns: 1fr 300px;
    gap: 2rem;
  }
  
  .sidebar-tools {
    background-color: var(--bg-secondary);
    border-radius: 0.75rem;
    border: 1px solid var(--border-color);
    height: fit-content;
  }
  
  .tools-header {
    padding: 1rem;
    border-bottom: 1px solid var(--border-color);
  }
  
  .tools-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
  }
  
  .tools-list {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .tool-button {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem;
    border-radius: 0.5rem;
    background-color: transparent;
    color: var(--text-primary);
    transition: background-color 0.2s ease;
    cursor: pointer;
    text-align: left;
    border: 1px solid var(--border-color);
  }
  
  .tool-button:hover {
    background-color: rgba(var(--accent-primary-rgb), 0.1);
    color: var(--accent-primary);
  }
  
  @media (max-width: 1024px) {
    .chat-layout {
      grid-template-columns: 1fr;
    }
  }
  
  @media (max-width: 768px) {
    .container {
      padding: 1.5rem;
    }
    
    .assignment-header__title {
      font-size: 1.5rem;
    }
  }
  
  @media (max-width: 640px) {
    .main {
      height: calc(100vh - 60px);
    }
    
    .container {
      padding: 1rem;
    }
  }
  .chat-container {
    display: flex;
    flex-direction: column;
    height: 100%;
    background-color: var(--bg-secondary);
    border-radius: 0.75rem;
    border: 1px solid var(--border-color);
    overflow: hidden;
  }
  
  .chat-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.5rem;
    border-bottom: 1px solid var(--border-color);
    background-color: var(--bg-secondary);
  }
  
  .chat-header__title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
  }
  
  .chat-header__actions {
    display: flex;
    gap: 0.5rem;
  }
  
  .btn-icon {
    background: none;
    border: none;
    color: var(--text-secondary);
    width: 2rem;
    height: 2rem;
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: background-color 0.2s ease, color 0.2s ease;
  }
  
  .btn-icon:hover {
    background-color: var(--bg-primary);
    color: var(--accent-primary);
  }
  
  .chat-messages {
    flex: 1;
    overflow-y: auto;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    background-color: var(--bg-primary);
  }
  
  .message {
    display: flex;
    max-width: 80%;
  }
  
  .message-user {
    margin-left: auto;
    justify-content: flex-end;
  }
  
  .message-brother {
    margin-right: auto;
  }
  
  .message-system {
    align-self: center;
    max-width: 90%;
    opacity: 0.8;
  }
  
  .avatar {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 0.75rem;
    flex-shrink: 0;
    color: white;
    font-weight: bold;
  }
  
  .message-content {
    background-color: var(--bg-secondary);
    padding: 0.75rem 1rem;
    border-radius: 1rem;
    border: 1px solid var(--border-color);
    line-height: 1.5;
  }
  
  .message-content p {
    margin: 0;
  }
  
  .message-content p + p {
    margin-top: 0.75rem;
  }
  
  .message-content strong {
    font-weight: 600;
    color: var(--accent-primary);
  }
  
  .message-content em {
    font-style: italic;
    color: var(--accent-secondary);
  }
  
  .message-content code {
    font-family: monospace;
    background-color: rgba(var(--accent-primary-rgb), 0.1);
    padding: 0.125rem 0.25rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
  }
  
  .message-content ul, 
  .message-content ol {
    margin: 0.5rem 0;
    padding-left: 1.5rem;
  }
  
  .message-content li {
    margin-bottom: 0.25rem;
  }
  
  .message-content li:last-child {
    margin-bottom: 0;
  }
  
  .message-content ol {
    list-style-type: decimal;
  }
  
  .message-content ul {
    list-style-type: disc;
  }
  
  .message-user .message-content {
    background-color: var(--accent-primary);
    color: white;
    border: none;
  }
  
  .message-user .message-content strong,
  .message-user .message-content em,
  .message-user .message-content code {
    color: white;
  }
  
  .message-user .message-content code {
    background-color: rgba(255, 255, 255, 0.2);
  }
  
  .message-system .message-content {
    background-color: transparent;
    border: 1px dashed var(--border-color);
    color: var(--text-secondary);
    font-size: 0.875rem;
  }
  
  .chat-input {
    padding: 1rem 1.5rem;
    border-top: 1px solid var(--border-color);
    background-color: var(--bg-secondary);
  }
  
  #chat-form {
    display: flex;
    align-items: flex-end;
    gap: 0.5rem;
  }
  
  #user-input {
    flex: 1;
    resize: none;
    border: 1px solid var(--border-color);
    border-radius: 0.75rem;
    padding: 0.75rem 1rem;
    background-color: var(--bg-primary);
    color: var(--text-primary);
    max-height: 150px;
    transition: border-color 0.2s ease;
  }
  
  #user-input:focus {
    outline: none;
    border-color: var(--accent-primary);
  }
  
  #user-input:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }
  
  .send-button {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    cursor: pointer;
    flex-shrink: 0;
    transition: transform 0.2s ease, opacity 0.2s ease;
  }
  
  .send-button:hover:not(:disabled) {
    transform: scale(1.05);
  }
  
  .send-button:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }
  
  .send-button svg {
    width: 1.25rem;
    height: 1.25rem;
  }
  
  .chat-status {
    display: none;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.5rem;
    background-color: var(--bg-primary);
    border-top: 1px solid var(--border-color);
  }
  
  .chat-status.active {
    display: flex;
  }
  
  .chat-status__indicator {
    display: flex;
    align-items: center;
  }
  
  .chat-status__text {
    font-size: 0.875rem;
    color: var(--text-secondary);
    font-weight: 500;
  }
  
  .typing-indicator {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }
  
  .typing-indicator span {
    width: 0.5rem;
    height: 0.5rem;
    border-radius: 50%;
    background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
    opacity: 0.7;
    animation: typing 1.5s infinite ease-in-out;
  }
  
  .typing-indicator span:nth-child(2) {
    animation-delay: 0.2s;
  }
  
  .typing-indicator span:nth-child(3) {
    animation-delay: 0.4s;
  }
  
  @keyframes typing {
    0%, 60%, 100% {
      transform: translateY(0);
      opacity: 0.7;
    }
    30% {
      transform: translateY(-0.35rem);
      opacity: 1;
    }
  }
  
  @media (max-width: 768px) {
    .chat-header,
    .chat-messages,
    .chat-input {
      padding: 1rem;
    }
    
    .message {
      max-width: 90%;
    }
  }
</style> 
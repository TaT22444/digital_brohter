---
// サンプルの授業データ
const classes = [
  { id: 'math', name: '数学', icon: 'calculator' },
  { id: 'science', name: '理科', icon: 'flask' },
  { id: 'english', name: '英語', icon: 'book' },
  { id: 'social', name: '社会', icon: 'globe' },
];

// 現在のパスを取得
const currentPath = Astro.url.pathname;

// ルートパスをスラッシュのみに正規化
const normalizedPath = currentPath.endsWith('/') && currentPath.length > 1 
  ? currentPath.slice(0, -1) 
  : currentPath;

// デバッグ情報
console.log('Current Path:', currentPath);
console.log('Normalized Path:', normalizedPath);
---

<aside class="sidebar">
  <div class="sidebar__logo">
    <a href="/">
      デジタル<span>お兄ちゃん</span>
    </a>
  </div>
  
  <nav class="sidebar__nav">
    <div class="sidebar__section">
      <h3 class="sidebar__section-title">メニュー</h3>
      <ul class="sidebar__nav-list">
        <li class="sidebar__nav-item">
          <a class={`sidebar__nav-link ${normalizedPath === '/' ? 'active' : ''}`} href="/">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
              <polyline points="9 22 9 12 15 12 15 22"></polyline>
            </svg>
            <span>ホーム</span>
          </a>
        </li>
        <li class="sidebar__nav-item">
          <a class={`sidebar__nav-link ${normalizedPath === '/analytics' ? 'active' : ''}`} href="/analytics">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
              <line x1="3" y1="9" x2="21" y2="9"></line>
              <line x1="9" y1="21" x2="9" y2="9"></line>
            </svg>
            <span>学習分析</span>
          </a>
        </li>
        <li class="sidebar__nav-item">
          <a class={`sidebar__nav-link ${normalizedPath === '/summary' ? 'active' : ''}`} href="/summary">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
              <polyline points="14 2 14 8 20 8"></polyline>
              <line x1="16" y1="13" x2="8" y2="13"></line>
              <line x1="16" y1="17" x2="8" y2="17"></line>
              <polyline points="10 9 9 9 8 9"></polyline>
            </svg>
            <span>サマリー</span>
          </a>
        </li>
      </ul>
    </div>
    
    <div class="sidebar__section">
      <h3 class="sidebar__section-title">授業</h3>
      <ul class="sidebar__nav-list">
        {classes.map(classItem => {
          const classPath = `/class/${classItem.id}`;
          const isActive = normalizedPath === classPath || normalizedPath.startsWith(`${classPath}/`);
          return (
            <li class="sidebar__nav-item">
              <a class={`sidebar__nav-link ${isActive ? 'active' : ''}`} href={classPath}>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  {classItem.icon === 'calculator' && (
                    <><rect x="4" y="4" width="16" height="16" rx="2" ry="2"></rect><line x1="8" y1="9" x2="16" y2="9"></line><line x1="8" y1="12" x2="16" y2="12"></line><line x1="8" y1="15" x2="16" y2="15"></line></>
                  )}
                  {classItem.icon === 'flask' && (
                    <><path d="M9 3l6 6v11a1 1 0 0 1-1 1H6a1 1 0 0 1-1-1V9l6-6"></path><path d="M8 3h8"></path><path d="M11 13h2"></path></>
                  )}
                  {classItem.icon === 'book' && (
                    <><path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path><path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path></>
                  )}
                  {classItem.icon === 'globe' && (
                    <><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></>
                  )}
                </svg>
                <span>{classItem.name}</span>
              </a>
            </li>
          );
        })}
      </ul>
    </div>
  </nav>
  
  <div class="sidebar__profile">
    <div class="sidebar__profile-info">
      <div class="sidebar__profile-image">
        <span>U</span>
      </div>
      <div class="sidebar__profile-name">ユーザー</div>
    </div>
  </div>
</aside>

<style>
  .sidebar {
    width: 240px;
    height: 100vh;
    position: fixed;
    left: 0;
    top: 0;
    background-color: var(--bg-secondary);
    border-right: 1px solid var(--border-color);
    display: flex;
    flex-direction: column;
    padding: 1.5rem 0;
  }
  
  .sidebar__logo {
    padding: 0 1.5rem 1.5rem;
    margin-bottom: 1rem;
    border-bottom: 1px solid var(--border-color);
  }
  
  .sidebar__logo a {
    font-family: 'Dela Gothic One', sans-serif;
    font-size: 1.25rem;
    color: var(--text-primary);
    text-decoration: none;
    display: block;
  }
  
  .sidebar__logo span {
    background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .sidebar__nav {
    flex: 1;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  
  .sidebar__section-title {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    color: var(--text-secondary);
    padding: 0 1.5rem;
    margin-bottom: 0.5rem;
    letter-spacing: 0.05em;
  }
  
  .sidebar__nav-list {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding: 0 0.75rem;
  }
  
  .sidebar__nav-item {
    border-radius: 0.5rem;
    overflow: hidden;
  }
  
  .sidebar__nav-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem;
    color: var(--text-secondary);
    text-decoration: none;
    transition: all 0.2s ease;
    border-radius: 0.5rem;
    font-size: 0.875rem;
  }
  
  .sidebar__nav-link:hover {
    background-color: rgba(var(--accent-primary-rgb), 0.1);
    color: var(--accent-primary);
  }
  
  /* アクティブなナビゲーションリンクのスタイル */
  .sidebar__nav-link.active {
    background-color: rgba(var(--accent-primary-rgb), 0.15);
    color: var(--accent-primary);
    font-weight: 500;
  }
  
  .sidebar__nav-link svg {
    width: 1.25rem;
    height: 1.25rem;
    flex-shrink: 0;
  }
  
  .sidebar__profile {
    padding: 1.5rem;
    border-top: 1px solid var(--border-color);
    margin-top: auto;
  }
  
  .sidebar__profile-info {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  
  .sidebar__profile-image {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
  }
  
  .sidebar__profile-name {
    font-size: 0.875rem;
    color: var(--text-primary);
    font-weight: 500;
  }
  
  @media (max-width: 768px) {
    .sidebar {
      width: 64px;
    }
    
    .sidebar__logo {
      padding: 0 0.5rem 1.5rem;
      text-align: center;
    }
    
    .sidebar__logo a {
      font-size: 1rem;
    }
    
    .sidebar__section-title,
    .sidebar__nav-link span,
    .sidebar__profile-name {
      display: none;
    }
    
    .sidebar__nav-link {
      justify-content: center;
    }
    
    .sidebar__profile-info {
      justify-content: center;
    }
  }
  
  @media (max-width: 640px) {
    .sidebar {
      position: fixed;
      bottom: 0;
      left: 0;
      top: auto;
      width: 100%;
      height: 60px;
      flex-direction: row;
      padding: 0;
      z-index: 100;
    }
    
    .sidebar__logo,
    .sidebar__section-title,
    .sidebar__profile {
      display: none;
    }
    
    .sidebar__nav {
      width: 100%;
      flex-direction: row;
      gap: 0;
      overflow-x: auto;
    }
    
    .sidebar__section {
      width: 50%;
    }
    
    .sidebar__nav-list {
      flex-direction: row;
      justify-content: space-around;
      padding: 0.5rem;
      gap: 0;
    }
    
    .sidebar__nav-link {
      flex-direction: column;
      gap: 0.25rem;
      padding: 0.5rem;
    }
    
    .sidebar__nav-link span {
      display: block;
      font-size: 0.7rem;
    }
  }
</style> 
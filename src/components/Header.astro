---
// 現在のパスを取得
const currentPath = Astro.url.pathname;

// ルートパスをスラッシュのみに正規化
const normalizedPath = currentPath.endsWith('/') && currentPath.length > 1 
  ? currentPath.slice(0, -1) 
  : currentPath;
---

<header class="header">
  <div class="header__inner">
    <a class="header__logo" href="/">
      デジタルお兄ちゃん(ミニドラ)
    </a>
    <nav class="header__nav">
      <ul class="header__nav-list">
        <li class="header__nav-item">
          <a class={`header__nav-link ${normalizedPath === '/' ? 'active' : ''}`} href="/">
            相談する
          </a>
        </li>
        <li class="header__nav-item">
          <a class={`header__nav-link ${normalizedPath === '/summary' ? 'active' : ''}`} href="/summary">
            サマリー
          </a>
        </li>
      </ul>
    </nav>
    <a class={`header__profile ${normalizedPath === '/profile' ? 'active' : ''}`} href="/profile">
      <div class="header__profile-image">
        <span>U</span>
      </div>
    </a>
  </div>
</header>

<style>
  .header {
    width: 100%;
    border-bottom: 1px solid var(--border-color);
    background-color: var(--bg-secondary);
  }

  .header__inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .header__logo {
    font-family: 'Dela Gothic One', sans-serif;
    font-size: 1.25rem;
    color: var(--text-primary);
    text-decoration: none;
    background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .header__nav-list {
    display: flex;
    gap: 1.5rem;
  }

  .header__nav-link {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.2s ease;
  }

  .header__nav-link:hover {
    color: var(--accent-primary);
  }

  /* アクティブなリンクのスタイル */
  .header__nav-link.active {
    color: var(--accent-primary);
    font-weight: 600;
    position: relative;
  }

  .header__nav-link.active::after {
    content: '';
    position: absolute;
    bottom: -0.5rem;
    left: 0;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
    border-radius: 1px;
  }

  .header__profile {
    text-decoration: none;
  }

  .header__profile.active .header__profile-image {
    box-shadow: 0 0 0 2px var(--accent-primary);
  }

  .header__profile-image {
    width: 2rem;
    height: 2rem;
    border-radius: 50%;
    background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
  }

  @media (max-width: 640px) {
    .header__nav {
      display: none;
    }
  }
</style> 